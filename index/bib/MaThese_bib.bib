doi = {10.1093/humrep/dew262},
issn = {0268-1161},
journal = {Human Reproduction},
keywords = {DNAH1,MMAF,exome sequencing,flagellum,gene mutations,genetic diagnosis,male infertility,teratozoospermia},
month = {dec},
