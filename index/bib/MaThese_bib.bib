journal = {Advances in Biological Regulation},
keywords = {AOA,ART,ICSI,IVF,MSOME,NLS,OAD,PAS-PT,PT,SOAF,artificial oocyte activator,assisted reproductive technology,intracytoplasmic sperm injection,inÂ vitro fertilisation,motile sperm organelle morphology evaluation,nuclear localisation signal,oocyte activation deficiency,perinuclear theca,postacrosomal sperm perinuclear theca,sperm-borne oocyte activating factor},
