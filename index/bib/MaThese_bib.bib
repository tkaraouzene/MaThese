journal = {Archives of histology and cytology},
month = {nov},
number = {4},
pages = {271--84},
pmid = {15700535},
title = {{The acrosome-acroplaxome-manchette complex and the shaping of the spermatid head.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/15700535},
volume = {67},
year = {2004}
}
@article{Yu2012,
